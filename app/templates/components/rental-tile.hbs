<li class="rentals">{{rental.owner}}'s {{rental.type}} in {{rental.city}}
  {{#if isImageShowing}}
  <p>
    <img src={{rental.image}} alt={{rental.type}}  {{action 'imageHide'}} />
  </p>
  {{else}}
  <button class="btn btn-success" {{action 'imageShow'}}>Show Image</button>
  {{/if}}
  <button {{action 'delete' rental}}>Delete</button>
</li>
